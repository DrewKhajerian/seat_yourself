<h1><%= current_user.name %></h1>

<h4>Total Points Earned: <%= current_user.points %></h4>

<h3>Reservations</h3>

<% current_user.reservations.each do |res| %>
	<p>Restaurant: <%= link_to res.restaurant.name, restaurant_path(res.restaurant) %></p>
	<p>Date: <%= res.date %></p> 
	<p>Time: <%= res.time %></p> 
	<p>Party size: <%= res.party %></p>
	<p>Reserved by: <%= res.user.name %></p>
	<p>Points earned: <%= res.user.points %></p>
	<br>
<% end %>

