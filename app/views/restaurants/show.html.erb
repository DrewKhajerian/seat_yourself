<h1><%= @restaurant.name %></h1>

<ul>
	<li><%= @restaurant[:description] %></li>
	<li><%= @restaurant[:address] %></li>
	<li><%= @restaurant[:phone_number] %></li>
	<li><%= @restaurant[:price_range] %></li>
	<!-- <li>menu</li> -->
</ul>

<div class="hours">
	<p>Open Every day from 11am-8pm</p>
</div>

<button><%= link_to "Make Reservation", new_restaurant_reservation_path(@restaurant) %></button>

<% if current_user.is_owner == true && current_user.id == @restaurant.user_id %>
	<button><%= link_to "View Reservations", restaurant_reservation_path(@restaurant) %></button>
<% end %>
